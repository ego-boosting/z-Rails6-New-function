<p>コメント件数：<%= book.book_comments.count %></p>
  <% book.book_comments.each do |book_comment| %>
    <p><%= image_tag book_comment.user.get_profile_image,size:"100x100" %>
      <%= book_comment.user.name %>
      <%= book_comment.comment %>
      <%= link_to 'Destroy', book_book_comment_path(book,book_comment.id), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{book_comment.id}"%></td>
    </p>
  <% end %>

  <%= form_with model: [book,book_comment], local: false do |f| %>
    <%= f.text_area :comment, class: "form-control", rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>